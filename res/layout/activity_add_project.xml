<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uttara.gtmanager.AddProject" >
 
    

    <EditText
        android:id="@+id/projectName_fld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDate"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/hint_projectName_fld" />

    <Button
        android:id="@+id/btnChooseMem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description_fld"
        android:layout_alignRight="@+id/projectName_fld"
        android:layout_below="@+id/dateView"
        android:layout_marginTop="16dp"
        android:onClick="chooseMember"
        android:text="@string/btnChooseMem_lbl" />

    <Button
        android:id="@+id/btnpickDate"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateView"
        android:layout_alignBottom="@+id/dateView"
        android:layout_toRightOf="@+id/add_btn"
        android:text="@string/btnpickDate_lbl" 
        android:onClick="showDate"/>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/projectName_fld"
        android:layout_below="@+id/projectName_fld"
        android:layout_marginTop="15dp"
       	android:text="@string/dateView_lbl"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/description_fld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dateView"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/hint_description_fld" />

    <EditText
        android:id="@+id/typeOfPro_fld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description_fld"
        android:layout_below="@+id/description_fld"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/hint_typeOfProj_fld" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeOfPro_fld"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/add_btn_lbl" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description_fld"
        android:layout_alignRight="@+id/description_fld"
        android:layout_below="@+id/btnChooseMem"
        android:layout_marginTop="18dp" />
    
</RelativeLayout>
